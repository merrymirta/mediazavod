<% admin_panel(""[:admin_blog_posts_index_header], :main => true) do %>

  <% if @posts %>
    <%= will_paginate(@posts) %>

    <table id="blog_post_list" cellspacing="0" cellpadding="0">
      <% @posts.each do |post| %>
        <tr>
          <td class="info"><%= render :partial => "post", :locals => {:post => post} %></td>
          <td class="controls"><%= render :partial => "controls", :locals => {:post => post} %></td>
        </tr>
      <% end %>
    </table>

    <%= will_paginate(@posts) %>
  <% else %>
    <div class="empty_set"><%= ""[:admin_blog_posts_index_empty_set] %></div>
  <% end %>
<% end %>
